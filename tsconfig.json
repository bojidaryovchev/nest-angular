// our target is es5 so output code is in es5 syntax
// default module for target es3 or es5 is commonjs
// default moduleResolution for commonjs is node
// so we can omit setting those properties
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "server/**/*.ts"
  ]
}
